@using MyEvernote.Web
@model IEnumerable<MyEvernote.Entities.Category>

@{
    ViewBag.Title = "Kategoriler";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Kategoriler</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">

        <p>
            @*@Html.ActionLink("Create New", "Create",null,new {@class="btn btn-default"})*@
            <a href="/Category/Create" class="btn btn-primary">
                Create <span class="glyphicon glyphicon-plus"></span>
            </a>

        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>
                        @Boostrap.LinkButton("/Category/Edit/" + item.Id, "warning", "btn-xs", "Edit", "edit", string.Empty)

                        @Boostrap.LinkButton("/Category/Details/" +item.Id, "info", "btn-xs", "Details", "search", string.Empty)

                        @Boostrap.LinkButton("/Category/Delete/" + item.Id, "danger", "btn-xs", "Delete", "trash", string.Empty)

                        @*<a href="/Category/Edit/@item.Id" class="btn btn-warning btn-xs" title="Edit">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>

                        <a href="/Category/Details/@item.Id" class="btn btn-info btn-xs" title="Details">
                            <span class="glyphicon glyphicon-search"></span>
                        </a>

                        <a href="/Category/Delete/@item.Id" class="btn btn-danger btn-xs" title="Delete">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>*@
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
