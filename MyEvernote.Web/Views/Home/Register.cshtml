@model MyEvernote.Entities.ValueObjets.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<link href="~/Content/Login-Register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<!------ Include the above in your HEAD tag ---------->
<style type="text/css">
</style>

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Formu </h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false)

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınız." })
                        @*<input id="email" type="text" class="form-control" name="email" placeholder="Enter your Email">*@
                    </div>

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-posta Adresiniz." })
                        @*<input id="email" type="text" class="form-control" name="email" placeholder="Enter your Email">*@
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                        @*<input id="password" type="password" class="form-control" name="password" placeholder="Enter your Password">*@
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                        @*<input id="password" type="password" class="form-control" name="password" placeholder="Enter your Password">*@
                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt</button>
                    </div>

                </div>
            </div>
        </div>
    </section>
}


