@using MyEvernote.Entities.Messages
@using MyEvernote.Web.ViewModels
@model ErrorViewModel

@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/Login-Register.css" rel="stylesheet" />
<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">@Model.Header</h1>
            </div>
            <div class="main-content">

                <div class="text-danger">
                    <h2>
                        <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;@Model.Title
                    </h2>

                    <hr />
                    <p>
                        @foreach (ErrorMesageObj item in Model.Items)
                        {
                            @item.Message<br />
                        }
                    </p>
                </div>

            </div>
        </div>
    </div>
</section>

@{
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function() { window.location = '" + Model.RedirectingUrl + "'; }," + Model.RedirectingTimeout + ");";
    }
}



@*Footer gizler*@
<script>
    $(function () {
        //$("footer").parent().hide();

        @Html.Raw(js);
    });
</script>